<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5efef">
    <com.example.a17494.yigong11.Utils.TobarUtil
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@android:color/white"
        app:leftBackground="@android:color/white"
        app:titleText="个人资料"
        app:settingText="设置"
        app:titleTextSize="8sp" />
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:background="@android:color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="学号"
                style="@style/Custom.user_info" />
            <TextView
                android:id="@+id/user_id"
                style="@style/Custom.user_info" />
        </LinearLayout>
        <View style="@style/Custom.lineStyle" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="姓名"
                style="@style/Custom.user_info" />
            <TextView
                android:id="@+id/user_name"
                style="@style/Custom.user_info" />
        </LinearLayout>
        <View style="@style/Custom.lineStyle" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="性别"
                style="@style/Custom.user_info" />
            <TextView
                android:id="@+id/sex"
                style="@style/Custom.user_info" />
        </LinearLayout>
        <View style="@style/Custom.lineStyle" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="联系方式"
                style="@style/Custom.user_info" />
            <TextView
                android:id="@+id/tel_phone"
                style="@style/Custom.user_info" />
        </LinearLayout>
        <View style="@style/Custom.lineStyle" />
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="学院"
            style="@style/Custom.user_info" />
        <TextView
            android:id="@+id/college"
            style="@style/Custom.user_info" />
    </LinearLayout>
        <View style="@style/Custom.lineStyle" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="专业"
                style="@style/Custom.user_info" />
            <TextView
                android:id="@+id/major"
                style="@style/Custom.user_info" />
        </LinearLayout>

        <View style="@style/Custom.lineStyle" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="注册日期"
                style="@style/Custom.user_info" />
            <TextView
                android:id="@+id/reg_date"
                style="@style/Custom.user_info" />
        </LinearLayout>
        <View style="@style/Custom.lineStyle" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="入学年份"
                style="@style/Custom.user_info" />
            <TextView
                android:id="@+id/in_year"
                style="@style/Custom.user_info"/>
        </LinearLayout>
        <View style="@style/Custom.lineStyle" />
    </LinearLayout>
</LinearLayout>