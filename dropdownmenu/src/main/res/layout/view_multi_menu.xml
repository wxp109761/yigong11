<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drop_menu_item_height"
    android:orientation="horizontal" >

        <ListView
            android:id="@+id/level_one_menu_ls"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:cacheColorHint="@color/no_color"
            android:layout_weight="1"
            android:scrollbars="none"
            android:dividerHeight="1px"
            android:divider="#dcdcdc"
            android:background="@color/white" >
        </ListView>
        
        <ListView
            android:id="@+id/level_two_menu_ls"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:cacheColorHint="@color/no_color"
            android:layout_weight="2"
            android:dividerHeight="1px"
            android:divider="#dcdcdc"
            android:background="@color/choose_area_item_press_color" >
        </ListView>

</merge>